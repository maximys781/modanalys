<div id="modanalys_chart" style="width: {{ width }}px; height: {{ height }}px;"></div>

{{ attach_library('modanalys/jqplot.pointLabels') }}
{{ attach_library('modanalys/jqplot.categoryAxisRenderer') }}
{{ attach_library('modanalys/jqplot.barRenderer') }}
{{ attach_library('modanalys/jquery.jqplot') }}

<script type="text/javascript">
    jQuery(document).ready(function($){
        var s = [{{ y  }}];
        var ticks = [{{ x }}];

        $.jqplot('modanalys_chart', [s], {
            width: {{ width }},
            height: {{ height }},
            seriesDefaults: {
                renderer: $.jqplot.BarRenderer,
                pointLabels: { show: true }
            },
            axes: {
                xaxis: {
                    renderer: $.jqplot.CategoryAxisRenderer,
                    ticks: ticks
                }
            }
        });
    });
</script>